@model AlbumCollection.Models.Song
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Album.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Anton|Courgette|Indie+Flower|Merriweather|Permanent+Marker" rel="stylesheet">
    <meta name="viewport" content="width=device-width" inital-scale="1.0" />
    <title>Add Song to Soundtrack</title>
</head>
<body>
    <header>
        <i id="movie" class="fas fa-film"></i><span class="Title">Movie Soundtracks</span>
    </header>
    <div class="CreateHeading">What Song Would You Like to Add?</div>
    <hr />
    <div class="Container">
        <fieldset>
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Performer" class="control-label"></label>
                        <input asp-for="Performer" class="form-control" />
                        <span asp-validation-for="Performer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SongName" class="control-label"></label>
                        <input asp-for="SongName" class="form-control" />
                        <span asp-validation-for="SongName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="AlbumId" type="hidden" class="control-label">
                        @*<select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Song" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </fieldset>
        <div class="BackToList">
            <a href="/Album/Details/@Model.AlbumId">Change Your Mind? Go back to list.</a>
        </div>
    </div>
</body>
</html>
